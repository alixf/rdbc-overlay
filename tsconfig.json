{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "module": "esnext",
    "target": "es2015",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "webpack.config.js"
  ]
}
